
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- bradcam_area_start  -->
<div class="bradcam_area breadcam_bg bradcam_overlay">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text">
                    <h3>blog</h3>
                    <p> @Html.ActionLink("Inicio", "Inicio", "Home") / Blog </p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- bradcam_area_end  -->
<!--================Blog Area =================-->
<section class="blog_area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mb-5 mb-lg-0">
                <div class="blog_left_sidebar">
                    @foreach (var item in ViewBag.ListadoBlogs)
                    {
                        <article class="blog_item">
                            <div class="blog_item_img">
                                <img class="card-img rounded-0" src="~/Imagenes/Blogs/@item.foto" alt="">
                                <a href="#" class="blog_item_date">
                                    <h3>@item.fecha.Day</h3>
                                    <p>@item.fecha.ToString("MMM")</p>
                                </a>
                            </div>

                            <div class="blog_details">
                                <a class="d-inline-block" href="single-blog.html">
                                    <h2>@item.titulo</h2>
                                </a>
                                <p>
                                    @item.descripcion
                                </p>
                            </div>
                        </article>
                    }
                </div>
            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget post_category_widget">
                        <h4 class="widget_title">Categorías</h4>
                        <ul class="list cat-list">
                            @foreach(var categoriasBlog in ViewBag.ConsultarCategoriasBlog)
                            {
                                <li>
                                    <a href="#" class="d-flex">
                                        <p>@categoriasBlog</p>
                                    </a>
                                </li>
                            }
                            
                        </ul>
                    </aside>

                   
                </div>
            </div>
        </div>
    </div>
</section>
<!--================Blog Area =================-->